{
    "name": "weslinkde/laravel-postgres-tools",
    "description": "Some handy helper function for PostgresSQL Databases",
    "keywords": [
        "Weslinkde",
        "laravel",
        "laravel-postgres-tools"
    ],
    "homepage": "https://github.com/weslinkde/laravel-postgres-tools",
    "license": "MIT",
    "authors": [
        {
            "name": "Dominik Lenz",
            "email": "dl@weslink.de",
            "role": "Developer"
        },
        {
            "name": "Jan Hallekamp",
            "email": "jh@weslink.de",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/contracts": "^12.0",
        "illuminate/filesystem": "^12.0",
        "illuminate/support": "^12.0",
        "laravel/prompts": "^0.3",
        "symfony/process": "^7.0"
    },
    "require-dev": {
        "driftingly/rector-laravel": "^2.0",
        "larastan/larastan": "^3.0",
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^8.0",
        "orchestra/testbench": "^10.0",
        "pestphp/pest": "^3.0",
        "pestphp/pest-plugin-arch": "^3.0",
        "pestphp/pest-plugin-laravel": "^3.0",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan-deprecation-rules": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0",
        "rector/rector": "^2.0",
        "spatie/laravel-ray": "^1.39"
    },
    "autoload": {
        "psr-4": {
            "Weslinkde\\PostgresTools\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Weslinkde\\PostgresTools\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "clear": "@php vendor/bin/testbench package:purge-laravel-postgres-tools --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": [
            "@composer run prepare",
            "@php vendor/bin/testbench workbench:build --ansi"
        ],
        "start": [
            "Composer\\Config::disableProcessTimeout",
            "@composer run build",
            "@php vendor/bin/testbench serve"
        ],
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test:unit": "vendor/bin/pest --testsuite=Unit",
        "test:integration": "vendor/bin/pest --testsuite=Integration",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint",
        "rector": "vendor/bin/rector process",
        "rector:dry": "vendor/bin/rector process --dry-run",
        "docker:up": "docker-compose up -d --wait",
        "docker:down": "docker-compose down",
        "docker:test": [
            "@docker:up",
            "@test:integration",
            "@docker:down"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Weslinkde\\PostgresTools\\PostgresToolsServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
